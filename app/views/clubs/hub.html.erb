<div class="container">
  <h1 class="page-header"><%= @club.cname %></h1>
  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4>Students</h4>
        </div>
        <div class="panel-body">
          <table class="table table-condensed table-bordered table-striped">
            <thead>
              <tr>
                <th>Student Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @students.each do |student| %>
              <tr>
                <td><%= "#{student.fname} #{student.lname}" %></td>
                <td>fhfgd</td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h4>Advisors</h4>
        </div>
        <div class="panel-body">
          <table class="table table-condensed table-bordered table-striped">
            <thead>
              <tr>
                <th>Advisor Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @advisors.each do |advisor| %>
              <tr>
                <td><%= "#{advisor.fname} #{advisor.lname}" %></td>
                <td>fhfgd</td>
              </tr>
              <% end %>
            </tbody>
          </table>        </div>
      </div>
    </div>
    <div class="col-md-9">
      <h3 class="page-header">Forum</h3>
      <h4>Add a comment</h4>
      <%= form_for(:club_comment, :url => {:controller => 'clubs', :action => 'addcomment'}) do |f| %>
      <%= f.text_area :ctext, class: 'form-control' %>
      <% unless validate_user == :not_logged_in -%>
        <br />
        <p>Public comment?: <%= f.check_box :public %></p>
      <% end -%>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
      <hr>
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>Username</th>
            <th>Comment</th>
            <th>Public?</th>
            <th>
              <br></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>Michael</td>
          </tr>
          <tr>
            <td>2</td>
            <td>Jake</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
