<div class="container">
  <h1 class="page-header">Clubs</h1>
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>My Clubs</h4>
        </div>
        <div class="panel-body">
          <table class="table table-condensed table-bordered table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @my_clubs.each do |club| %>
                <tr>
                  <td><%= club.cname %></td>
                  <td><%= club.descr %></td>
                  <td><%= link_to "Visit Hub", {:action => "hub", :controller => "clubs", :id => club.clubid}, :class => "btn btn-xs btn-success", :method => :get %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <% if (validate_user == :clubadmin) || (validate_user == :superuser) -%>
	      <div class="panel panel-default">
	        <div class="panel-heading">
	          <h4>Club Administration</h4>
	        </div>
	        <div class="panel-body">
            <%= link_to "Create a club", {:action => "new", :controller => "clubs"}, :class => "btn btn-block btn-primary", :method => :get %> <br />
            <%= link_to "Manage clubs", {:action => "manage", :controller => "clubs"}, :class => "btn btn-block btn-primary", :method => :get %>
	        </div>
	      </div>
      <% end %>
    </div>
    <div class="col-md-8">
      <h3>Browse Clubs</h3>
      <table class="table table-condensed table-bordered table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @all_clubs.each do |club| %>
          <tr>
            <td><%= club.cname %></td>
            <td><%= club.descr %></td>
            <td><%= link_to "Visit Hub", {:action => "hub", :controller => "clubs", :id => club.clubid}, :class => "btn btn-xs btn-success", :method => :get %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>