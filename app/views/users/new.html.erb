<div class="container">
  <h1>Sign Up</h1>
  <%= form_for(:person, :url => {:controller => 'users', :action => 'create'}) do |f| %>
  	<p> Username:</br> <%= f.text_field :pid, class: 'form-control' %></p>
    <p> First Name:</br> <%= f.text_field :fname, class: 'form-control' %> </p>
    <p> Last Name:</br> <%= f.text_field :lname, class: 'form-control' %> </p>
    <p> Password:</br> <%= f.password_field :passwd, class: 'form-control' %></p>
    <%= f.submit "Register", class: "btn btn-primary" %>
  <% end %>
</div>